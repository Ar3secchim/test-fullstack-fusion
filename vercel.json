{
  "version": 2,
  "builds": [
      {
        "src": "/apps/api/src/main.ts",
        "use": "@vercel/node"
      },
      {
        "src":"/apps/client/dist/*",
        "use":"@now/static"
      }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/apps/api/src/main.ts",
      "methods": ["GET", "POST", "PUT", "DELETE"]
    },
    {
      "src": "/(.*)",
      "dest": "apps/client/dist/$1"
    }
  ]
}