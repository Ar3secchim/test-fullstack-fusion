{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "env": ["DATABASE_URL", "DIRECT_URL"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "env": ["DATABASE_URL", "DIRECT_URL"]
    },
    "start": {
      "dependsOn": ["^build"],
      "env": ["DATABASE_URL", "DIRECT_URL"]
    }
  },
  "globalEnv": [".env"]
}